@model SmileMakersApp.Models.Prescription
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PdfLayout.cshtml";
    var imagePath = Server.MapPath("~/images");
}
<table style="width:100%; padding-bottom:20px; border-bottom:1px solid #333">
    <tr>
        <td width="10%" valign="top"><img src="@imagePath\icon.png" alt="mug shot" width="50" /></td>
        <td width="40%" align="left"><h1 style="font-family:'Buxton Sketch'">SMILE MAKERS DENTAL CLINIC</h1></td>
        <td width="50%" align="right" style="font-size:12px">
            <b>Dr. Tahmina Zerin</b><br />B.D.S., P.G.T.<br />(Oral & Maxillofacial Surgery)<br />
            Dhaka Dental College<br />(Conservative Dentistry & Endodontics)<br />B.S.M.M.U. [PG Hospital]
        </td>
    </tr>   
</table>

<table style="width: 100%; margin-top:20px">        
    <tr>
        <td width="50%" align="left"><b>Prescription ID:</b>&nbsp;@Model.id</td>
        <td width="50%" align="right"><b>Date:</b>&nbsp;@Model.prescription_date</td>
    </tr>
</table>

<table style="width: 100%; margin-top:20px">
    <tr>
        <td width="50%" align="left"><b>Name:</b>&nbsp;@Model.Patient.name</td>
        <td width="50%" align="right"><b>Contact:</b>&nbsp;@Model.Patient.contact</td>
    </tr>
</table>

<table border="1" style="width:100%; margin-top:20px; border-collapse:collapse" cellpadding="10">
    <tr>
        <td width="30%" valign="top"><b>Advice:</b></td>
        <td width="70%">@Model.advice</td>
    </tr>
    <tr>
        <td width="30%" valign="top"><b>Investigation:</b></td>
        <td width="70%">@Model.investigation</td>
    </tr>
    <tr>
        <td width="30%" valign="top"><b>Oral Examination:</b></td>
        <td width="70%">@Model.oral_examination</td>
    </tr>
    <tr>
        <td width="30%" valign="top"><b>Medical History:</b></td>
        <td width="70%">@Model.medical_history</td>
    </tr>    
</table>

<h3 style="font-family:'Buxton Sketch'">TREATMENTS</h3>
<div>
    @foreach (var item in Model.PrescribedTreatments)
    {
        <table style="width:50%; margin-top:20px">
            <tr>
                <td>@item.Treatment.name</td>
            </tr>
            <tr>
                <td width="50%" align="right" style="border-bottom: 1px solid #000000; border-right: 1px solid #000000">@item.upper_left &nbsp;</td>
                <td width="50%" style="border-bottom:1px solid #000000">&nbsp;@item.upper_right</td>
            </tr>
            <tr>
                <td width="50%" align="right" style="border-right:1px solid #000000">@item.lower_left &nbsp;</td>
                <td width="50%">&nbsp;@item.lower_right</td>
            </tr>
        </table>
    }
</div>

<table style="width:100%; margin-top:50px; bottom:0" cellpadding="20">
    <tr>
        <td width="70%" align="right">&nbsp;</td>
        <td width="30%" align="center" style="border-top:1px solid #000000">
        Dr. Tahmina Zerin<br />@DateTime.Now
        </td>
    </tr>
</table>

